{
  "manifest_version": 2,
  "name": "Better Comment",
  "version": "0.1",
  "description": "Analyze and suggest improvements for comments using OpenAI's API",

  "permissions": [
    "activeTab",
    "storage",
    "https://*.github.com/*",
    "https://*.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html"
}
